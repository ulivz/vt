@require './config';
@require './theme';
@require './code';
@require './custom-blocks';
@require './arrow';
@require './wrapper';
@require './toc';
@require './header';
@require './mobile';
@require './home';

html, body {
  padding: 0;
  margin: 0;
  background-color: var(--vp-c-bg);
  transition: background-color 0.5s;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-size: 16px;
  color: $textColor;
}

.page {
  letter-spacing: 0.2px;
  // padding-left: calc(calc((100% - var(--vp-screen-max-width)) / 2) + var(--vp-sidebar-width));
}

.navbar {
  background-color: var(--vp-c-bg);
  position: fixed;
  z-index: 20;
  top: 0;
  left: 0;
  right: 0;
  height: $navbarHeight;
  box-sizing: border-box;
  border-bottom: 1px solid $borderColor;
}

.sidebar-mask {
  position: fixed;
  z-index: 9;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: none;
}

.sidebar {
  font-size: 14px;
  background-color: var(--vp-c-bg);
  width: var(--vp-sidebar-width);
  position: fixed;
  z-index: 10;
  margin: 0;
  top: $navbarHeight;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  border-right: 1px solid $borderColor;
  overflow-y: auto;
}

{$contentClass}:not(.custom) {
  @extend $wrapper;

  > *:first-child {
    margin-top: 6rem;
  }

  a:hover {
    color: var(--vp-c-brand-dark);
  }

  p.demo {
    padding: 1rem 1.5rem;
    border: 1px solid #ddd;
    border-radius: 4px;
  }

  img {
    max-width: 100%;
  }
}

{$contentClass}.custom {
  padding: 0;
  margin: 0;

  img {
    max-width: 100%;
  }
}

a {
  font-weight: 500;
  color: $accentColor;
  text-decoration: none;
}

p a code {
  font-weight: 400;
  color: $accentColor;
}

kbd {
  background: #eee;
  border: solid 0.15rem #ddd;
  border-bottom: solid 0.25rem #ddd;
  border-radius: 0.15rem;
  padding: 0 0.15em;
}

blockquote {
  font-size: 1rem;
  color: #999;
  border-left: 0.2rem solid #dfe2e5;
  margin: 1rem 0;
  padding: 0.25rem 0 0.25rem 1rem;

  & > p {
    margin: 0;
  }
}

ul, ol {
  padding-left: 1.2em;
}

strong {
  font-weight: 600;
}

tr {
  border-top: 1px solid var(--vp-c-divider-light-1);
  transition: background-color 0.5s;
}

tr:nth-child(2n) {
  background-color: var(--vp-c-bg-soft);
}

th, .vp-doc td {
  border: 1px solid var(--vp-c-divider-light-1);
  padding: 0.6em 1em;
}

code, kbd, .line-number {
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace;
}

p, ul, ol {
  line-height: 1.7;
}

ul, ol {
  list-style: none;

  li {
    position: relative;

    &:before {
      content: '';
      position: absolute;
      width: 5px;
      height: 5px;
      border-radius: 50%;
      background-color: rgba(60, 60, 60, 0.33);
      transition: background-color 0.5s;
      left: -1.25rem;
      top: 0.75rem;
    }
  }
}

hr {
  border: 0;
  border-top: 1px solid $borderColor;
}

table {
  border-collapse: collapse;
  margin: 1rem 0;
  display: block;
  overflow-x: auto;
}

.theme-container {
  &.sidebar-open {
    .sidebar-mask {
      display: block;
    }
  }

  &.no-navbar {
    {$contentClass}:not(.custom) > h1, h2, h3, h4, h5, h6 {
      margin-top: 1.5rem;
      padding-top: 0;
    }

    .sidebar {
      top: 0;
    }
  }
}

@media (min-width: ($MQMobile + 1px)) {
  // TODO wide screen mode
  .page {
    padding-left: 100px;

    &.api {
      font-size: 20px;
      padding-left: 240px;

      .vp-doc {
        max-width: 1024px;
      }
    }
  }

  .sidebar {
    left: calc(((100% - var(--vp-screen-max-width)) / 2));
  }

  .theme-container.no-sidebar {
    .sidebar {
      display: none;
    }

    .page {
      padding-left: 0;
    }
  }
}
